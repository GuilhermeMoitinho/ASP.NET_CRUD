@model IEnumerable<DIVTECH2.Models.FornecedorModel>

@{
    ViewData["Title"] = "Listagem de fornecedores";
}

<h2>Fornecedores</h2>

<p>
    <a asp-action="Criar" class="btn btn-success">Novo fornecedor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Especialidade)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CEP)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Endereco)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-secondary">Detalhes</a> |
                    <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table> 